@using MySociety.Entity.ViewModels
@model ProfileVM
@{
    ViewData["Title"] = "My Profile";
}

<div class="container">
    <!-- User heading, search and add button -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h1 class="blue-text mt-3 mb-0">My Profile</h1>
        </div>
        <div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-custom">
                <img class="text-white" src="~/images/icons/chevron-left-white.svg" alt="">
                <span>Back</span>
            </a>
        </div>
    </div>

    <div class="row bg-custom p-3 mx-0">

        <!-- Photo and Name-->
        <div class="d-flex align-items-center pb-2">
            <div class="d-flex">
                <img id="img-preview" class="profile-img rounded-circle"
                    src="@(Model.ProfileImageUrl != null ? Model.ProfileImageUrl : "/images/profile.png")">
                <div class="camera-div bg-white">
                    <label for="profileImage">
                        <img class="camera-img" src="~/images/icons/camera.svg" alt="Upload Profile Image">
                    </label>
                </div>
            </div>
            <div>
                <div class="fs-3">@Model.Name</div>
                @if (User.IsInRole("Owner") || User.IsInRole("Tenant"))
                {
                    <div class="fw-semibold">
                        <span>House @Model.House,</span>
                        <span>@Model.Floor Floor,</span>
                        <span>@Model.Block Block</span>
                    </div>
                }
                <span asp-validation-for="Image" class="text-danger" id="imageValidationSpan"></span>
            </div>
        </div>

        <form asp-action="Update" asp-controller="MyProfile" class="" method="post" id="formMyProfile"
            enctype="multipart/form-data">

            <input asp-for="UserId" hidden>
            <input asp-for="Image" type="file" id="profileImage" class="d-none" onchange="imageValidation(this, 1)">

            <div class="mb-3">
                <div class="fs-4 pt-2"> Personal Information </div>

                <div class="row row-cols-2">

                    <div class="form-group col mt-2">
                        <label asp-for="Name">Name</label>
                        <input asp-for="Name" type="text" class="form-control" aria-describedby="Phone">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group col mt-2">
                        <label asp-for="Email">Email*</label>
                        <input asp-for="Email" type="email" class="form-control" aria-describedby="email" disabled>
                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                            else.</small>
                    </div>

                    <div class="form-group col mt-2">
                        <label asp-for="Phone">Phone</label>
                        <input asp-for="Phone" type="text" class="form-control" aria-describedby="Phone">
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                </div>

                <div class="d-flex gap-3 mt-2 justify-content-end">
                    <button class="btn btn-custom" type="submit">
                        Update
                    </button>
                    @* <button class="btn btn-custom-secondary" type="reset">
                    Cancel
                </button> *@
                </div>
            </div>
        </form>


        <div>
            <div class="d-flex pt-2 justify-content-between align-items-center">
                <div class="fs-4"> Vehicle Information </div>
                <button class="btn btn-custom-secondary" onclick="getVehicle(0)">
                    + Add Vehicle
                </button>
            </div>

            <div class="pt-2">
                <div class="input-group w-25">
                    <input type="search" class="form-control" placeholder="Search" name="search" id="searchQuery"
                        oninput="paginationAjax(1)">
                    <button type="submit" class="input-group-text">
                        <img src="~/images/icons/search.svg" alt="">
                    </button>
                </div>
            </div>

            <div id="vehicleTable">
                <!-- Partial View of Vehicle List-->
            </div>

        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="vehicleModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog  modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content " id="vehicleContent">

        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/myProfile.js"></script>
}