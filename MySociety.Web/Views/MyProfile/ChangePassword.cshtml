@using MySociety.Entity.ViewModels
@model ChangePasswordVM

@{
    ViewData["Title"] = "My Profile";
}


<!-- All form content: Note and form -->
<div class="change-content">
    <div class="mb-3">
        <h1 class="blue-text">Change Password</h1>
    </div>

    <div class="text-grey mb-2">
        <div class="fs-6">Enter a new password to update your account credentials.</div>
    </div>

    <!-- Form starts here-->
    <form asp-action="ChangePassword" asp-controller="MyProfile" id="ChangePasswordForm" class="changePassword-form"
        method="post">

        <!-- Current Password -->
        <div class="mb-3">
            <div class="form-floating input-group">
                <input asp-for="OldPassword" type="password" class="form-control" id="CurrentPassword" placeholder="">
                <label for="CurrentPassword">Current Password*</label>
                <span class="input-group-text">
                    <i class="eye-icon fa fa-eye-slash cursor-pointer"
                        onclick="togglePassword('CurrentPassword', this)"></i>
                </span>
            </div>
            <span asp-validation-for="OldPassword" class="text-danger"></span>
        </div>

        <!-- New Password -->
        <div class="mb-3">
            <div class="form-floating input-group">
                <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" placeholder="">
                <label asp-for="NewPassword">New Password*</label>
                <span class="input-group-text">
                    <i class="eye-icon fa fa-eye-slash cursor-pointer"
                        onclick="togglePassword('NewPassword', this)"></i>
                </span>
            </div>
            <span asp-validation-for="NewPassword" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="mb-3">
            <div class="form-floating input-group">
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="ConfirmPassword"
                    placeholder="">
                <label for="ConfirmPassword">Confirm New Password*</label>
                <span class="input-group-text">
                    <i class="eye-icon fa fa-eye-slash cursor-pointer"
                        onclick="togglePassword('ConfirmPassword', this)"></i>
                </span>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <div class="d-flex gap-3">
            <button class="btn btn-custom" type="submit">
                Submit
            </button>
            <button type="reset" class="btn btn-custom-secondary">
                Cancel
            </button>
        </div>
    </form>
    <!-- Form ends here-->
</div>
